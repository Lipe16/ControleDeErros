package digifarma.ferreira.security;

import java.lang.reflect.Array;
import java.util.Arrays;
import java.util.Collection;
import java.util.EnumSet;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.GrantedAuthority;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.security.core.userdetails.UserDetailsService;
import org.springframework.security.core.userdetails.UsernameNotFoundException;
import org.springframework.stereotype.Service;

import digifarma.ferreira.enums.Perfil;
import digifarma.ferreira.model.Usuario;
import digifarma.ferreira.repository.UsuarioRepository;

@Service
public class MyUserDetail extends Usuario implements UserDetails{

	
    public MyUserDetail(Usuario usuario) {
        super(usuario);
    }
    
	public List<Perfil> getPerfis() {
		return Arrays.asList(Perfil.values());
	}

    @Override
    public Collection<? extends GrantedAuthority> getAuthorities() {
        return getPerfis();
    }

    @Override
    public Collection<? extends GrantedAuthority> getAuthorities() {
        return Perfil.values();
    }

    @Override
    public String getPassword() {
        return getSenha();
    }
    
    
    @Override
    public String getUsername() {
        return getEmail();
    }

    @Override
    public boolean isAccountNonExpired() {
        return true;
    }

    @Override
    public boolean isAccountNonLocked() {
        return true;
    }

    @Override
    public boolean isCredentialsNonExpired() {
        return true;
    }

    @Override
    public boolean isEnabled() {
        return true;
    }

}
