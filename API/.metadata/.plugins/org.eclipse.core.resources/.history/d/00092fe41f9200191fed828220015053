package digifarma.ferreira.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import digifarma.ferreira.dto.ErroDTO;
import digifarma.ferreira.model.Erro;
import digifarma.ferreira.service.ErroService;

@RestController
@CrossOrigin(origins = "*")
public class ErroController {
	
	@Autowired
	ErroService erroService;
	
	@GetMapping(value = "/erros")
	public List<Erro> getErros(){
		return erroService.getErros();
	}
	
	@GetMapping(value = "/erros/{id}")
	public Erro getErro(@PathVariable("id") Long id){
		return erroService.getErro(id);
	}
	
	@PostMapping(value = "/erro")
	public Erro save(@RequestBody ErroDTO erroDTO){
		
		
		return erroService.salvar(erroDTO.getErro());
	}

}
